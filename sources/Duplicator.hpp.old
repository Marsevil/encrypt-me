#ifndef Duplicator_hpp
#define Duplicator_hpp

#include <filesystem>
#include <string>

class Duplicator
{
    std::string encrypted_directory, uncrypted_directory;
    
public:
    Duplicator();
    
    inline void set_encrypted_directory(std::string _encrypted_directory)
    {
        encrypted_directory = _encrypted_directory;
    }
    inline void set_uncrypted_directory(std::string _uncrypted_directory)
    {
        uncrypted_directory = _uncrypted_directory;
    }
    inline std::string get_encrypted_directory()
    {
        return encrypted_directory;
    }
    inline std::string get_uncrypted_directory()
    {
        return uncrypted_directory;
    }
    
};

#endif /* Duplicator_hpp */
